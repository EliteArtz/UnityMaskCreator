<Window x:Class="UnityMaskCreator.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UnityMaskCreator"
      mc:Ignorable="d"
      Title="Settings" Height="370.509" Width="367.515" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <StaticResource ResourceKey="WindowBackground" />
    </Window.Background>
    <DockPanel>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Style="{StaticResource gridSetting}" Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <Label HorizontalAlignment="Center" Style="{StaticResource itemLabel}">W.I.P. Section</Label>

                    <Border Style="{StaticResource itemBorder}">
                        <TextBox Style="{StaticResource itemBox}" IsEnabled="False"></TextBox>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
